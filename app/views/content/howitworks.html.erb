<% content_for :css do %>
	<%= include_stylesheets :all, :howitworks, :media => "all" %>
<% end %>

<div id="howitworks">
	<div class="slides">
		<div class="slide slide-1 slide-previous"></div>
		<div class="slide slide-2"></div>
		<div class="slide slide-3"></div>
		<div class="slide slide-4"></div>
	</div>
	<div class="slide-ctrls">
		<ul class="slide-indicators">
			<li class="slide-indicator-active"></li>
			<li></li>
			<li></li>
			<li></li>
		</ul>
		<a class="slide-prev" href="javascript:void(0)">&larr;</a>
		<a class="slide-next" href="javascript:void(0)">&rarr;</a>
	</div>
</div>

<% content_for :js do %>
	<%= include_javascripts :all, :howitworks %>
	<script>
		$(function() {
			Kitify.Manager({
				components: {
					howitworks: Kitify.HowItWorks({ times:4 })
				}
			}).init();
		});
	</script>
<% end %>